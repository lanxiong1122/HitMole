<!-- Corrected layout with weightSum and adjusted weights -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="100">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="88dp"
      android:text="Have Good level"
      android:textColor="#333333"
      android:textSize="28sp"/>

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="50"
      android:src="@drawable/img_sign_in_whack_mole_mushroom"/>

  <Button
      android:id="@+id/id_start_next"
      android:layout_width="180dp"
      android:layout_height="30dp"
      android:layout_marginTop="30dp"
      android:layout_weight="10"
      android:background="@drawable/shape_start_button"
      android:gravity="center"
      android:text="Go"
      android:textColor="#ffffff"
      android:textSize="18sp"
      android:textStyle="bold"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="10"
      android:layout_marginTop="10dp"
      android:orientation="horizontal"
      android:gravity="center_horizontal">

    <TextView
        android:id="@+id/yinsi"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Privacy"
        android:textStyle="bold"
        android:textColor="#666666"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/woimen"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="About"

        android:textStyle="bold"
        android:textColor="#666666"
        android:textSize="14sp"/>

  </LinearLayout>

</LinearLayout>